{
  "compilerOptions": {
    "lib": ["es2019", "dom"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "dist",
    "baseUrl": "../src"
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**",
    "./serverless/**",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "./src/**/__tests__",
    "./src/**/__mocks__",
  ]
}
