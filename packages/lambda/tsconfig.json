{
  "compilerOptions": {
    "lib": ["es2017"],
    "allowJs": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": ".build",
    "rootDir": "src"
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
